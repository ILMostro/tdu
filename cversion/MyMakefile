ifeq ($(shell hostname -s), crow)
	DEST = /www/webonastick.com/htdocs/$(program)/dev
else
	DEST = dse@crow.webonastick.com:/www/webonastick.com/htdocs/$(program)/dev
endif

.PHONY: publish
publish: $(program).1.html $(program).1.ps $(program).1.pdf $(program).1.txt tar
	rsync -av $(program)-*.tar.gz $(program).1.html $(program).1.txt $(program).1.ps $(program).1.pdf $(DEST)

.PHONY: test-manpage
test-manpage: tdu.1
	groff -Tascii -man tdu.1 | less

